:root{
	--card-back: #1A1A3C;
	--main-back: #141432;
	
	--text-main: #fff;
	--text-second: #e5e5e5;
	
	--green: #14c25a;
	--violet: #7047ee;
	--blue: #2d74ff;
	--red: #e73152;
	--lblue: #00cabe;
}

.wrapper{
	display: flex;
	flex-direction: column;
	position: relative;
	min-height: 100%;
	background: var(--main-back);
}

.container {
	padding: 0 15px 0 15px;
	
}

.grid__areas {
	display: grid;
	grid-template-areas: "sidebar main";
	flex: 1 1 auto;
	grid-template-columns: minmax(40px,auto) minmax(auto,1fr);
}

/*-----Header-----*/
.header{
	background: #1A1A3C;
	padding: 10px 20px;
}
.header__flex {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding-bottom: 10px;
}
.header__title {
	color: #fff;
}
.header__society {
	display: flex;
	align-items: center;
}

.header__society:before{
	content: " ";
	background-image: url(../img/icon/code_logo.svg);
	background-repeat: no-repeat;
	background-size: contain;
	width: 35px;
	height: 35px;
}

.header__profile {
	display: flex;
	align-items: center;
	gap: 5px;
}
.header__profile-photo {
	width: 45px;
	height: 45px;
}
.header__profile-photo img{
	width: 100%;
	height: 100%;
	border-radius: 50%;
	object-fit: cover;
}

.profile__name{
	color: var(--text-main);
	padding: 0px 15px 0px 5px;
}

.header__bottom {
	display: flex;
	justify-content: space-between;
	align-items: center;
	border-top: .1px solid #2a2a55;
	padding-top: 10px;
}
.header__nav {
	color: #fff;
}

.nav__page,
.nav__index{
	cursor: pointer;
	transition: .3s;
}

.nav__index{
	color: var(--text-second);
}

.nav__index:hover{
	color: var(--text-main);
}

/*-----Header-----*/

/*-------------------------------popup-------------------------------*/
.popup__main {}
.popup__btn{
	color: #fff;
	cursor: pointer;
	transition: 0.3s;
	border-radius: 10px;
	-webkit-border-radius: 10px;
	-moz-border-radius: 10px;
	-ms-border-radius: 10px;
	-o-border-radius: 10px;
	background: rgba(45, 116, 255, 0.9);
	text-align: center;
	font-family: Roboto;
	font-weight: 700;
	padding: 12px 20px;
}
.popup__btn:hover{
	background: rgba(45, 116, 255, 1);
}
.popup{
	width: 100%;
	height: 100vh;
	display: flex;
	justify-content: center;
	align-items: center;
	position: fixed;
	top: 0;
	left: 0;
	z-index: -1;
	opacity: 0;
	transition: all .3s ease-out;
	background: rgba(0, 0, 0, 0.6);
}
.popup__card {
	position: relative;
	min-width: 350px;
	min-height: 200px;
	display: inline-flex;
	justify-content: center;
	align-items: center;
	padding: 10px;
	background: #1A1A3C;
	box-shadow: 0px 1px 10px rgba(121, 121, 121, 0.7);
	border-radius: 10px;
	-webkit-border-radius: 10px;
	-moz-border-radius: 10px;
	-ms-border-radius: 10px;
	-o-border-radius: 10px;
}
.popup__card-close{
	position: absolute;
	top: 10px;
	right: 10px;
	display: flex;
	transform: rotate(45deg);
}
.popup__card-close:after{
	content: '\02795';
	font-size: 9px;
	margin-left: auto;
	color: #b9b9b9;
	cursor: pointer;
}
.popup__card-close:hover:after{
	font-size: 9px;
	color: #000;
}
.popup__content {}
.popup__text{
	color: #fff;
	max-width: 350px;
}
/*-------------------------------popup-------------------------------*/


/*-----Main------*/
.sidebar{grid-area: sidebar;background: #1A1A3C;border-right: .1px solid #2a2a55;padding: 10px 0;}

.sidebar__menu {
	display: flex;
	justify-content: center;
}
.sidebar__menu-top {
	display: inline-flex;
	position: relative;
}
.sidebar__menu-title {
	color: #fff;
	font-size: 21px;
	padding: 0 25px 0px 15px;
	display: table;
}

.accordion__btn {
	width: 35px;
	height: 35px;
	position: relative;
	transform: scale(-1,1);
	transition: transform .3s ease-out;
}

.accordion__btn svg{
	width: 100%;
	height: 100%;
	object-fit: cover;
	position: absolute;
	top: 0;
	left: 0;
	cursor: pointer;
}

.active{
	transform: scale(1,1);
	transition: transform .3s ease-out;
}

.accordion__menu {
	max-width: 0;
	overflow: hidden;
	transition: max-width .1s ease-out;
	display: flex;
	flex-direction: column;
	gap: 20px;
}
.sidebar__list {
	padding: 0 25px 0px 15px;
	margin-top: 20px;
}
.sidebar__menu-ul {
	display: flex;
	flex-direction: column;
	gap: 10px;
}
.sidebar__menu-li {
	color: var(--text-second);
	display: flex;
	transition: .3s;
}
.sidebar__menu-li:hover {
	color: var(--text-main);
}
.sidebar__menu-a {
	padding: 7px 0;
	display: flex;
	align-items: center;
}

.sidebar__menu-a:before{
	content: " ";
	background-repeat: no-repeat;      
	background-size: contain;      
	background-color: #272727;
	width: 15px;
	height: 15px;
	margin-right: 5px;
	opacity: .8;
	transition: .3s;
}

.icon__dashboard:before{
	background-image: url(../img/icon/dashboard.svg); 
}

.icon__info:before{
	background-image: url(../img/icon/info.svg); 
}

.icon__portfolio:before{
	background-image: url(../img/icon/portfolio.svg); 
}

.icon__order:before{
	background-image: url(../img/icon/order.svg); 
	height: 11px;
}

.sidebar__menu-a:hover:before{
	opacity: 1;
}

/*-----Main------*/
.main{
	grid-area: main;
}
/*-----Main__Content------*/
.content {
	padding: 0 15px;
}
.content__title {
	color: #fff;
	padding: 15px 5px;
}
.content__grid {
	display: grid;
	grid-template-columns: repeat(auto-fit,minmax(300px,1fr));
	gap: 20px;
}
.content__card {
	padding: 15px;
	border-radius: 6px;
	display: flex;
	flex-direction: column;
	gap: 35px;
	background: var(--card-back);
}

.content__card:hover{
	background: #1B1B3E;
}

.content__card-description {
}

.card__description-top{display: flex;justify-content: space-between;align-items: center;position: relative;}

.card__description-title {
	color: #14c25a;
	background: rgba(20, 194, 90, 0.2);
	padding: 5px 10px;
	display: inline;
	border-radius: 5px;
}

.green__title{
	color: var(--green);
	background: rgba(20, 194, 90, 0.2);
}
.violet__title{
	color: var(--violet);
	background: rgba(112, 71, 238, 0.2);
}
.red__title{
	color: var(--red);
	background: rgba(231, 49, 82, 0.2);
}
.blue__title{
	color: var(--blue);
	background: rgba(45, 116, 255, 0.2);
}
.lblue__title{
	color: var(--lblue);
	background: rgba(0, 202, 190, 0.2);
}

/*-----Accordion------*/
.accordion__section {
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 30px;
	position: absolute;
	right: 0;
	top: 0;
	z-index: 10;
	justify-content: center;
}
.accordion__main {
	color: #fff;
	font-family: Roboto;
	display: inline-flex;
	align-items: center;
}

.accordion__main:after{
	content: " ";
	background-image: url(../img/icon/doths.svg); 
	background-repeat: no-repeat;      
	background-size: contain;
	width: 5px;
	height: 15px;
	opacity: .8;
	transition: .3s;
	position: absolute;
	right: 0;
	top: 8px;
}
.active1:after{
	transform: rotate(90deg);
}

.accordion__text {
	max-height: 0;
	overflow: hidden;
	transition: max-height 0.2s ease-out;
	background: var(--main-back);
	position: relative;
	border-radius: 10px;
	box-shadow: 0px 1px 4px rgba(121, 121, 121, 0.7);
	-webkit-border-radius: 10px;
	-moz-border-radius: 10px;
	-ms-border-radius: 10px;
	-o-border-radius: 10px;
}
.accordion__text ul{
	gap: 5px;
	padding: 10px 0;
	display: flex;
	align-items: center;
	flex-direction: column;
}
.accordion__text li{
	color: #fff;
	padding: 5px 20px;
	cursor: pointer;
	width: 100%;
}
/*-----Accordion------*/

.card__description-text {
	color: #fff;
	padding: 20px 0px 0px 0px;
}
.card__description-photo {
	display: flex;
	gap: 20px;
	justify-content: center;
}
.card__description-img {
	position: relative;
	overflow: hidden;
	padding: 0px 35% 35% 0px;
	/*! width: 140px; */
	/*! height: 140px; */
	border-radius: 6px;
	cursor: pointer;
}
.card__description-img img {
	
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	object-fit: cover;
}

.card__description-info {
	display: flex;
	justify-content: space-between;
}
.card__info-block {
	display: flex;
	gap: 5px;
	justify-content: center;
	align-items: center;
}
.card__info-photo {
	width: 35px;
	height: 35px;
}
.card__info-photo svg{
	width: 100%;
	height: 100%;
	object-fit: contain;
}

.green__icon svg{
	fill: var(--green);
}
.violet__icon svg{
	fill: var(--violet);
}
.blue__icon svg{
	fill: var(--blue);
}
.lblue__icon svg{
	fill: var(--lblue);
}
.red__icon svg{
	fill: var(--red);
}
.card__info-text {
}
.card__info-title {
	color: #fff;
	padding: 5px;
}
.card__info-value {
	color: #fff;
	padding: 5px;
}

/*-----Footer-----*/
.footer{
	flex: 0 0 auto;
}

