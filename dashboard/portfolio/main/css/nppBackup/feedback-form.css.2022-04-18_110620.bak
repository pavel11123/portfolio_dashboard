.popup__main{margin-top: 40px;background: #1a1a3c;padding: 10px;margin-bottom: 40px;}

.popup__grid{display: grid;grid-template-columns: repeat(2,minmax(130px,1fr));gap: 15px;padding: 20px 0;justify-content: center;}

.popup__input{background: #141432;color: var(--text-second);font-family: Roboto;padding: 15px;border-radius: 6px;}

.popup__login{}

.popup__email{}

.popup__subject{grid-column: span 2;}

.popup__message{grid-column: span 2;grid-row: span 2;resize: none;}

.popup__submit{
  cursor: pointer;
  grid-column: span 2;
}